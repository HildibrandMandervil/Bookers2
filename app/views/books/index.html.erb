<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'users/userprofile', user: current_user, book: @book%>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th class="col-3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.id) do %>
                <%= image_tag book.user.get_profile_image %>
              <%end%>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <%end%>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <%end%>  
      </tbody>
    </table>

</div>
