
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
<% end %>
   </ul>
<% end %>
      <h2>Editing Book</h2>
  <%= form_with model: @book do |f| %>
  <div class="form-group">
    <label for="inputName">Title</label><br />
      <%= f.text_field :title, autofocus: true, id:"inputTitle"%>
  </div>
  <div class="form-group">
    <label for="inputName">Opinion</label><br />
      <%= f.text_area :body, autofocus: true, id:"body"%>
  </div>
  <%= f.submit "UPdate Book", class:"btn btn-success text-white" %>
<% end %>
   <%= link_to "Show" ,book_path(params[:id]) %>|<%= link_to "Back",books_path %>



</div>
</div>
</div>