<%= flash[:notice] %>
<%= render 'users/userprofile', user: @user ,book: @new_book %>

 <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>

  <table class="table table-hover table-inverse">


   <tbody>

          <tr>
           <td>
             <%= link_to user_path do %>
             <%= image_tag @user.get_profile_image %></br>
             <%end%>
             <%= link_to book_path do %>
             <%= @user.name %>
             <%end%>
           </td>
           <td>
             <%= link_to book_path do %>
             <%= @book.title %>
             <%end%>
            </td>
           <td>
              <%= @book.body %>
           </td>
           <td>
             <% if @book.user == current_user %>
             <%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-success" %>
             <%end%>
           </td>

           <td>
            <% if @book.user == current_user %>
            <%= link_to "Destroy",book_path(@book.id), method: :delete,class:"btn btn-danger","data-confirm" => "本当に消しますか？"  %>
            <%end%>
           </td>
          </tr>
         </table>
       </div>
</div>
</div>